<script>
  import {gsap} from 'gsap'
  import SplitType from "split-type"
  const elements = document.querySelectorAll('.reveal')
  elements.forEach((el) => {
    const splitText = new SplitType(el as HTMLElement)

    gsap.to(splitText.chars, {
      y: 0,
      stagger: 0.05,
      delay: 0.2,
      duration: 0.1
    })
  })
</script>
