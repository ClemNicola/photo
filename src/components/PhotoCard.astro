---
import { Image } from 'astro:assets'
import { getCollection, type CollectionEntry } from 'astro:content'

  export interface Props {
    category: string
  }
  const { category } = Astro.props

  const photos: CollectionEntry<'photos'>[] = await getCollection('photos', (photo: CollectionEntry<'photos'>) =>
    photo.data.category === category
  )
---

<div>
  {photos.map((photo) => (
    <div class="flex flex-col">
      <h2 class="font-custom font-semi-bold py-4 text-4xl text-custom-black">
        {photo.data.title}
      </h2>
      <div class="flex gap-4">
        <Image src={photo.data.image} alt={photo.data.title} width='900' height='1250' class='object-cover pl-16'/>
        <div class="border-t-2 ">
          <h3>
            See more
          </h3>
        </div>
      </div>
    </div>
  ))}
</div>
